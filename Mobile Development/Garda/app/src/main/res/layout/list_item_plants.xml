<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/plantsImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF909090"/>

    <TextView
        android:id="@+id/plantsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/plantsImage"
        android:hint="title plant"
        android:textColor="@color/warna_g"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/plantsScience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plantsName"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/plantsImage"
        android:fontFamily="@font/quicksand_light"
        android:textColor="@color/warna_g"
        android:textStyle="italic"
        android:ellipsize="end"
        android:maxLines="3"
        android:hint="science plant" />

</RelativeLayout>